<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#82240A"
        android:textSize="20dp"
        android:text=" Profile The Beer"
        android:textStyle="bold" />
    
    
    
    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/registration_back"
        android:orientation="horizontal"
        android:layout_above="@+id/bottom_rel"
        android:layout_below="@+id/title"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/ll_tags"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".3" >

            <TextView
                android:id="@+id/home_aroma_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/aroma"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_sweet_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_aroma_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:text="@string/sweet"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_bitter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_sweet_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:text="@string/bitter"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_malt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_bitter_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="@string/malt"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_yeast_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_malt_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="23dp"
                android:text="@string/yeast"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_mouth_feel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_yeast_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="@string/mouth"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/home_feel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_mouth_feel_txt"
                android:layout_centerHorizontal="true"
                android:text="@string/feel"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_seek_bars"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".7" >
            
          <RelativeLayout
              android:id="@+id/rel_1"
              android:layout_height="wrap_content"
              android:layout_width="180dp"
             >  

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_toLeftOf="@+id/text4"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                
                android:text="3"
                android:textColor="@android:color/white" />
            
            
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/text5"
           android:layout_marginTop="10dp"
           android:layout_marginRight="25dp"
             
                android:text="4"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
             
                android:text="5"
                android:textStyle="bold"
                android:textColor="#FFFF55"
               />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text5"
                android:text="6"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text6"
             android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".3"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white" />
            
            </RelativeLayout>

            <SeekBar
                android:id="@+id/home_aroma_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rel_1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_sweet_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_aroma_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_bitter_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_sweet_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_malt_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_bitter_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
                      
            
            

            <SeekBar
                android:id="@+id/home_yeast_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_malt_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_mouth_seek_bar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_yeast_seek_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     android:id="@+id/bottom_rel"
     android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <Button
                android:id="@+id/home_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
                android:background="@drawable/registeration_save_btn" />

            <Button
                android:id="@+id/home_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
             
                  android:layout_marginRight="5dp"
                android:background="@drawable/registration_canel_btn" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>