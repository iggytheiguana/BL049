<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#82240A"
        android:textSize="20dp"
        android:text=" Profile The Beer"
        android:textStyle="bold" />
    
    
    
    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/registration_back"
        android:orientation="horizontal"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/ll_seek_bars"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           >
            
            
            <RelativeLayout
                android:id="@+id/rel_texts"
                android:layout_alignParentRight="true"
                android:layout_width="160dp"
    android:layout_marginRight="5dp"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="3"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/text4"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
               android:layout_toLeftOf="@+id/text5"
                android:text="4"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:layout_marginTop="1dp"
              
                android:text="5"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#FFFF55"
               />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text5"
                android:text="6"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/text6"
               android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".3"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white" />
            
            </RelativeLayout>
            
            
            
           <TextView
                android:id="@+id/home_aroma_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/aroma"
                android:textColor="@android:color/white" /> 

            <SeekBar
                android:id="@+id/home_aroma_seek_bar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/rel_texts"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            
            
            <TextView 
                
                android:id="@+id/aroma_edit"
                android:layout_width="fill_parent"
                android:background="@drawable/text_field"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:hint="Comments"
                android:layout_below="@+id/home_aroma_seek_bar"/>
            
            
             <TextView
                android:id="@+id/home_sweet_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aroma_edit"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/sweet"
                android:textColor="@android:color/white" />
            <SeekBar
                android:id="@+id/home_sweet_seek_bar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aroma_edit"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:layout_alignParentRight="true"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            
            
            
            
            
            <TextView 
                
                android:id="@+id/sweet_edit"
                android:layout_width="fill_parent"
                android:background="@drawable/text_field"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Comments"
                android:textColor="@android:color/black"
                android:layout_below="@+id/home_sweet_seek_bar"/>
            
             <TextView
                android:id="@+id/home_bitter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sweet_edit"
               android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
               
                android:text="@string/bitter"
                android:hint="Comments"
                android:textColor="@android:color/white" />
            
            <SeekBar
                android:id="@+id/home_bitter_seek_bar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sweet_edit"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:layout_alignParentRight="true"
                android:paddingRight="7dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
            
            
            
            <TextView 
                
                android:id="@+id/bitter_edit"
                android:layout_width="fill_parent"
                android:background="@drawable/text_field"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Comments"
                android:textColor="@android:color/black"
                android:layout_below="@+id/home_bitter_seek_bar"/>

            <SeekBar
                android:id="@+id/home_malt_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_bitter_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:hapticFeedbackEnabled="true"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_yeast_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_malt_seek_bar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />

            <SeekBar
                android:id="@+id/home_mouth_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_yeast_seek_bar"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="22dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:visibility="gone"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <Button
                android:id="@+id/home_save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/registeration_save_btn" />

            <Button
                android:id="@+id/home_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/home_save_btn"
                android:background="@drawable/registration_canel_btn" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>