<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    
    
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#82240A"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text=" Optional Taste Parameters"
        android:layout_centerHorizontal="true"/>

    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_above="@+id/home_2_save_btn"
       android:layout_centerHorizontal="true"
android:layout_marginTop="110dp"
android:background="@drawable/registration_back">
    
        <RelativeLayout
            android:id="@+id/ll_seek_bars"
            android:layout_width="250dp"
            android:layout_height="30dp"
          
             >
            
            <RelativeLayout
               android:id="@+id/rel1_text_toggle"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_below="@+id/home_sour_seek_bar" >
               
                
                
               <TextView
                   android:id="@+id/home_additive_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Additive"
                   android:layout_marginLeft="10dp"
                   android:textSize="15sp"
                   android:textColor="@android:color/white"
                   android:layout_centerVertical="true"/> 
                   
               
               <CheckBox
                   
                   android:id="@+id/home_toggle_additive"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                 android:button="@drawable/toggle_btn_on_off"
                   android:layout_marginRight="10dp"/>
                
                
                
                
                
                </RelativeLayout>
                
            
            <RelativeLayout
                android:id="@+id/rel1_number"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/rel1_text_toggle">
               
                
                <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/text4"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white" />
                
                
                <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/text5"
                android:text="4"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                
                android:text="5"
                android:textStyle="bold"
               android:textColor="#FFFF55" />
                <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text5"
                android:text="6"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
               android:layout_toRightOf="@+id/text6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white" />
                
                
                
                
                

        
        </RelativeLayout>
        
            
           <SeekBar
                android:id="@+id/home_additive_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1_number"
                
             
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
           
           
           
           <EditText
               android:id="@+id/home_additive_comment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/home_additive_seek_bar"
               android:background="@drawable/text_field"
               android:layout_margin="5dp"
               android:hint="Comments"
               android:paddingLeft="10dp"
               android:visibility="gone"
                 android:textColor="@android:color/black"
               />
           ssssssssssssssssssssssssssssssssssssssss
           
           
           
           <RelativeLayout
               android:id="@+id/rel2_text_toggle"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="10dp" 
              >
               
                
                
               <TextView
                   android:id="@+id/home_sour_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sour"
                   android:layout_marginLeft="10dp"
                   android:textSize="15sp"
                   android:textColor="@android:color/white"
                   android:layout_centerVertical="true"/> 
                   
               
               <CheckBox
                   
                   android:id="@+id/home_toggle_sour"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp"
                   android:button="@drawable/toggle_btn_on_off"/>
        
                </RelativeLayout>
           
             ssssssssssssssssssssssssssssssssssssssss
             
             <RelativeLayout
                android:id="@+id/rel2_number"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/rel2_text_toggle"
              >
               
                
                <TextView
                android:id="@+id/text3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/text4_2"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white" />
                
                
                <TextView
                android:id="@+id/text4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
               android:layout_toLeftOf="@+id/text5_2"
                android:text="4"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text5_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                
                android:text="5"
                android:textStyle="bold"
               android:textColor="#FFFF55" />
                <TextView
                android:id="@+id/text6_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text5_2"
                android:text="6"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text7_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
               android:layout_toRightOf="@+id/text6_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white" />
                
         </RelativeLayout>
           
             
             
             <SeekBar
                android:id="@+id/home_sour_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel2_number"
                
             
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
           
             
             <TextView
               android:id="@+id/home_sour_comment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/home_sour_seek_bar"
               android:background="@drawable/text_field"
               android:layout_margin="5dp"
               android:hint="Comments"
               android:textColor="@android:color/black"
               android:paddingLeft="10dp"
               android:visibility="gone"
               />
             
             <RelativeLayout
               android:id="@+id/rel3_text_toggle"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="10dp" 
               android:layout_below="@+id/home_additive_comment">
               
                
                
               <TextView
                   android:id="@+id/home_booziness_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Booziness"
                   android:layout_marginLeft="10dp"
                   android:textSize="15sp"
                   android:textColor="@android:color/white"
                   android:layout_centerVertical="true"/> 
                   
               
               <CheckBox
                   
                   android:id="@+id/home_toggle_booziness"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="10dp"
                                      android:button="@drawable/toggle_btn_on_off"/>
                   
        
                </RelativeLayout>
             
             <RelativeLayout
                android:id="@+id/rel3_number"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_below="@+id/rel3_text_toggle"
              >
               
                
                <TextView
                android:id="@+id/text3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/text4_3"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white" />
                
                
                <TextView
                android:id="@+id/text4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
               android:layout_toLeftOf="@+id/text5_3"
                android:text="4"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text5_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                
                android:text="5"
                android:textStyle="bold"
               android:textColor="#FFFF55" />
                <TextView
                android:id="@+id/text6_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/text5_3"
                android:text="6"
                android:textColor="@android:color/white" />
                
                <TextView
                android:id="@+id/text7_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
               android:layout_toRightOf="@+id/text6_3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white" />
                
         </RelativeLayout>
         
             <SeekBar
                android:id="@+id/home_booziness_seek_bar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel3_number"
                
             
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progressDrawable="@drawable/rating_star"
                android:thumb="@drawable/slider_handle" />
             
             <TextView
               android:id="@+id/home_flavour_comment"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/home_booziness_seek_bar"
               android:background="@drawable/text_field"
               android:layout_marginLeft="10dp"
               android:hint="Flavour"
                 android:textColor="@android:color/black"
               android:layout_marginTop="5dp"
               android:paddingLeft="10dp"
               android:lines="2"
               android:visibility="gone"
               />
           <TextView
               android:id="@+id/home_warmth_comment"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/home_booziness_seek_bar"
               android:layout_alignParentRight="true"
               android:background="@drawable/text_field"
               android:layout_marginRight="10dp"
               android:layout_marginTop="5dp"
               android:hint="Warmth"
                 android:textColor="@android:color/black"
               android:paddingLeft="10dp"
               android:lines="2"
               android:visibility="gone"
               />
</RelativeLayout>

        </ScrollView>
        
    
     <Button
        android:id="@+id/home_2_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/registeration_save_btn" />

    <Button
        android:id="@+id/home_2_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/registration_canel_btn" />

</RelativeLayout>