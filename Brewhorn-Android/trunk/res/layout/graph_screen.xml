<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 >
    
    
    <Button
        android:id="@+id/graph_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>
   
    <LinearLayout
        android:id="@+id/graph_relative"
        
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/graph_linear_layout"
        android:layout_below="@+id/graph_share_btn"
      >
        
        
        
      
        
        
    
        </LinearLayout>
        
   
    
    
    
    
    <LinearLayout
        android:id="@+id/graph_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <Button
            
            android:id="@+id/graph_edit_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:visibility="gone"
            
            
            />
        
       
        
        
        
        
        </LinearLayout>

</RelativeLayout>