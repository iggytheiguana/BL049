<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background" >
    
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_back"/>
    
    <TextView
        android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Community Screen"
        android:textStyle="bold"
        android:textSize="20dp"
           android:textColor="#891D02"/>
   

    
 <RelativeLayout 
     
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="110dp"
     android:layout_centerHorizontal="true"
     >
     
     
     
     <ImageView
         android:id="@+id/logo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:background="@drawable/logo" />
     
     
     
     
     
     <TextView
         android:id="@+id/txt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/logo"
         android:text="Share"
       android:textColor="#891D02"
         android:textStyle="bold"
         android:textSize="30sp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"/>
     
   
   <Button
       android:id="@+id/facebook_share_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/btn_fb"
       android:layout_below="@+id/txt"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="20dp"/>
   
   
   <Button
       android:id="@+id/twitter_share_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/btn_twitter"
         android:layout_below="@+id/txt"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
    
       android:layout_toRightOf="@+id/facebook_share_btn"/>
   
   
</RelativeLayout>
</RelativeLayout>